{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/category.schema.json",
  "title": "Categories",
  "description": "Defines the schema for categories used to organize transactions within a ledger application. Categories can be default, modified, or custom, providing flexibility in categorization.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": ["string", "null"]
    },
    "parentId": {
      "type": ["string", "null"]
    },
    "defaultCategoryId": {
      "type": ["string", "null"]
    },
    "categoryStatus": {
      "type": "string",
      "enum": ["DEFAULT", "MODIFIED", "CUSTOM"]
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": ["string", "null"],
      "format": "date-time"
    }
  },
  "required": ["id", "name", "createdAt", "categoryStatus"],
  "additionalProperties": false,
  "if": {
    "properties": {
      "categoryStatus": {
        "const": "CUSTOM"
      }
    }
  },
  "then": {
    "required": ["defaultCategoryId"]
  }
}
