{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/jwaspin/luca-ledger/main/schema/src/luca-schema.json",
  "title": "Luca Schema",
  "description": "Schema for the luca ledger",
  "type": "object",
  "properties": {
    "categories": {
      "type": "array",
      "description": "List of categories",
      "uniqueItems": true,
      "items": {
        "$ref": "https://raw.githubusercontent.com/jwaspin/luca-ledger/feature/168-schema-translation-process-v1-to-v2/schema/src/schemas/category.json"
      }
    },
    "entities": {
      "type": "array",
      "description": "List of entities",
      "uniqueItems": true,
      "items": {
        "$ref": "./schemas/entity.json"
      }
    },
    "recurringTransactions": {
      "type": "array",
      "description": "List of recurring transactions",
      "uniqueItems": true,
      "items": {
        "$ref": "./schemas/recurringTransaction.json"
      }
    },
    "recurringTransactionEvents": {
      "type": "array",
      "description": "List of recurring transaction events",
      "uniqueItems": true,
      "items": {
        "$ref": "./schemas/recurringTransactionEvent.json"
      }
    },
    "transactions": {
      "type": "array",
      "description": "List of transactions",
      "uniqueItems": true,
      "items": {
        "$ref": "./schemas/transaction.json"
      }
    }
  },
  "required": ["schema", "entities", "transactions"],
  "additionalProperties": false
}
